name: Deploy HTML to GitHub Pages

on:
  push:
    branches: [ "master" ]  # trigger quando fai push su master
  workflow_dispatch:        # permette esecuzione manuale

permissions:
  contents: read
  pages: write
  id-token: write

jobs:
  deploy:
    runs-on: ubuntu-latest
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    steps:
      # 1️⃣ Checkout della repo
      - uses: actions/checkout@v4

      # 2️⃣ Configura Pages
      - uses: actions/configure-pages@v5

      # 3️⃣ Carica i file HTML/CSS/JS come artifact
      - uses: actions/upload-pages-artifact@v3
        with:
          path: '.'   # tutto il contenuto della repo

      # 4️⃣ Deploy su GitHub Pages
      - id: deployment
        uses: actions/deploy-pages@v4

